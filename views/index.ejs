  <!------ funciones de Javascript-->
  <script>
    ////-- funcion del inicio de sesion modal
    function mostrarAlertaInicio() {
      Swal.fire({
        title: 'Ingrese sus credenciales',
        html: `
            <img src="/img/logo.jpg" id="img3"/> <br><hr>
            <input id="input1" class="swal2-input" placeholder="Escribe tu usuario" required>
            <input id="input2" class="swal2-input" placeholder="Escribe tu contraseña" required> 
        `,
        showCancelButton: true,
        confirmButtonText: 'Aceptar',
        cancelButtonText: 'Cancelar',
        preConfirm: () => {
            const usuario = document.getElementById('input1').value;
            const pass = document.getElementById('input2').value;

            if (!usuario || !pass) {
                Swal.showValidationMessage('Por favor, completa ambos campos.');
                return false; // Evita el cierre de la alerta si falta algún campo
            }
            return { usuario, pass }; // Devuelve los valores si están completos
        }
    }).then((result) => {
        if (result.isConfirmed) {
          window.location.href='/pedidos' 
        }
    });
  }

  </script>
