<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventario de Productos</title>
    <link rel="stylesheet" href="/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

</head>
<body id="bodypedidos">
 <!--scripts para los fomrs-->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <!--scripts para las tablas -->

  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  
  <header>
     <!-- Botón para abrir el sidebar -->
    <button class="open-btn" onclick="toggleSidebar()">☰ Menú</button>
    <h1 id="titulo">Gestión de Inventarios</h1>
    <button class="open-btn"  onclick="alertaCerrarSesion()">Salir </button>
  </header>

  <main>
      <!----- sidebar ---->
      <div id="sidebar" class="sidebar">
        <button class="close-btn" onclick="toggleSidebar()">×</button>
        <img id="logoside" src="/img/logo.jpg" alt="Ejemplo Imagen">
        <br>
        <a href="/pedidos">Pedidos</a>
        <a href="/productos">Productos</a>
        <a href="/clientes">Clientes</a>
        <a href="/">Informes</a>
        <a href="/">Administracion</a>
      </div>
    <!---  div principal de form y tabla s -----> 
      <div class="parent">
        <div class="item">    
            <!-- Formulario para agregar un nuevo producto -->
            <h2>Agregar Producto</h2><br>
            <form action="/productos/agregar" method="POST">
                <input type="text"  class="form-control" name="nombre" placeholder="Nombre del producto" required><br>
                <input type="number"  class="form-control" name="cantidad" placeholder="Cantidad" required><br>
                <input type="number"  class="form-control" step="0.01" name="valor_uni" placeholder="Valor unitario" required><br>
                <button type="submit"  class="btn btn-primary">Agregar</button><br>
            </form>
        </div>
        <div class="item">
            <!-- Lista de productos -->
            <h2>Lista de Productos</h2><br>
            <table id="datatableinv" class="display">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Cantidad</th>
                    <th>Valor Unitario</th>
                    <th>Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% productos.forEach(producto => { %>
                    <tr>
                      <td><%= producto.id %></td>
                      <td><%= producto.nombre %></td>
                      <td><%= producto.cantidad %></td>
                      <td>$<%= producto.valor_uni %></td>
                      <td>
                        <div class="itemeditar">
                            <!-- Formulario para actualizar la cantidad -->
                            <form action="/productos/editar/<%= producto.id %>" method="POST">
                                <input type="number" name="cantidad" class="form-control" value="<%= producto.cantidad %>" required>
                            </form>

                            <!-- Formulario para actualizar la cantidad -->
                            <form action="/productos/editar/<%= producto.id %>" method="POST">
                                <button type="submit" class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i></button>
                            </form>
                    
                            <!-- Botón para eliminar producto -->
                            <form action="/productos/eliminar/<%= producto.id %>" method="POST">
                                <button type="submit" class="btn btn-outline-danger" onclick="return confirm('¿Eliminar este producto?')"><i class="bi bi-x-octagon"></i></button>
                            </form>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
              
        </div>
    </div>

    <script>
        /*funcion para el menu slide*/
        function toggleSidebar() {
            const sidebar = document.getElementById("sidebar");
            sidebar.style.left = sidebar.style.left === "0px" ? "-250px" : "0px";
        }
    
    /*funcion para los datatables */
        $(document).ready(function () {
            $('#datatableinv').DataTable({
            "pageLength": 5, // Número de filas por página
            "language": { "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/Spanish.json" } // Traducción al español
            });
        });
    /* funcion de notificaciones  con Sweetaletr2*/
    
    function alertaCerrarSesion() {
        Swal.fire({
            title: "¿Cerrar sesion?",
            icon: "question",
            iconHtml: "?",
            confirmButtonText: "Cerrar",
            cancelButtonText: "Cancelar",
            showCancelButton: true,
            showCloseButton: true
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href='../'  // Cambia esta URL por la que necesites
            }
        });
    }
    </script>
</body>
</html>
